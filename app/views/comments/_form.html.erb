<%= form_with(model: [@post, @post.comments.build], remote: true) do |f| %>
  
  <p>
    <%= f.label :name%><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body%><br>
    <%= f.text_field :body %>
  </p>
  <br>
  <% if user_signed_in? %>
    <p>
      <%= f.submit %>
    </p>
  <% else %>  
    <button class="button"><p class="sign_in"><%= link_to 'User Login', new_user_session_path %></p></button>
  <% end %>
<% end %>